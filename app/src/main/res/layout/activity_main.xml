<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@color/colorAccent">
    <ImageView
            android:layout_width="314dp"
            android:layout_height="281dp" app:srcCompat="@drawable/cookie"
            android:id="@+id/cookieImage" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="112dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.37" android:clickable="true" android:onClick="cookieCount"/>
    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/counterTxt" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:textSize="24sp" android:textStyle="bold"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/titleTxt"
            android:layout_marginTop="56dp"/>
    <TextView
            android:text="Cookie Clicker Counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTxt" android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497" android:textSize="30sp"
            android:textStyle="bold" android:textAlignment="center" android:textColor="#3F51B5"/>
    <Button
            android:text="Start again from zero"
            android:layout_width="276dp"
            android:layout_height="46dp"
            android:id="@+id/startAgainBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:background="#00BCD4" android:onClick="startFromZero"/>
</android.support.constraint.ConstraintLayout>